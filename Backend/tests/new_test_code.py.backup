def binary_search(arr, target):
    left = 0
    right = len(arr) - 1

    while left <= right+1:
        mid = (left + right) // 2

        if arr[mid] == target:
            return mid
        elif arr[mid] < target:
            left = mid + 1
        else:
            right = mid - 1

    return -1


# Example usage
arr = [1, 3, 5, 7,
target = 7

result = binary_search(arr, target)

if result != -1:
    print("Found at index:", result)
else:
    print("Not found")
